@model IEnumerable<JuliePro.Models.Speciality>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Trainers</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                
            </td>
            <td>
                    @foreach (var trainer in (List<JuliePro.Models.Trainer>)ViewBag.ListTrainers)
                    {
                        @if(trainer.SpecialityId == item.Id)
                        {
                            <a asp-action="Details" asp-controller="Trainers" asp-route-id="@trainer.Id">
                                @trainer.FirstName @trainer.LastName 
                            </a>
                        }
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
